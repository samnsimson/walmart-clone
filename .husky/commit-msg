    commitMessage="$message"
    echo "-------------------------------------------------------"
    echo "Your new commit message is:"
    echo "[âœ…] $commitMessage"
    echo "-------------------------------------------------------"

    # Prompt for confirmation
    read -p "Press 'Enter' to commit or 'Ctrl+C' to cancel"

